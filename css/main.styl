                color: #5b626a

.contact-us
    padding-top: 40px
    padding-bottom: 40px
    background-color: #f2f6fb
    h1
        font-family: "Futura PT Book"
        margin-bottom: 80px
        font-size: 48px
        color: #5b626a
        margin-top: 0px
        text-transform: uppercase
    .contcat-p
        padding: 0 50px
        margin-bottom: 20px
        img
            margin-right: 4px
            vertical-align: middle
            display: inline-block
        .label
            font-family: "Roboto"
            font-weight: 500
            color: #636e7c
            vertical-align: middle
            font-size: 16px
            display: inline-block
        span
            font-family: "Futura PT Medium"
            color: #202629
            font-size: 16px
            vertical-align: middle
            display: inline-block
    h3
        font-family: "Futura PT Demi"
        font-size: 30px
        padding: 0 50px 25px
        color: #5b626a
    form
        width: 400px
        margin: 0 auto;
        background-color: #f9fbfd
        padding: 30px 40px
        text-align: center
        input,
        textarea
            resize: none
            width: 100%
            margin-bottom: 10px
            display: inline-block
            background-color: #ffffff
            border: 1px solid #cccccc
            border-radius: 25px
            padding: 15px 20px
            font-family: "Futura PT Book"
            font-size: 18px
            color: #636e7c
        button
            display: inline-block
            padding: 15px 35px
            border: none
            border-radius: 35px
            font-family: "Futura PT Heavy"
            font-size: 14px
            color: #000000
            text-transform: uppercase
            outline: none
            background-color: #dce300
            border-bottom: 4px solid #a68900 !important
            span
                display: inline-block
                &:last-of-type
                    margin-left: 4px
                    vertical-align: middle
                img
                    display: inline-block
                    vertical-align: middle
            &:hover,
            &:focus,
            &:active
                background-color: #dce300
                border: none
                color: #ffffff
            &:active
                border: none !important

.prices
    padding-top: 40px
    padding-bottom: 40px
    background-color: #f2f6fb
    h1
        font-family: "Futura PT Book"
        margin-bottom: 20px
        font-size: 48px
        color: #5b626a
        text-transform: uppercase
    h3
        font-family: "Futura PT Demi"
        font-size: 30px
        padding: 0 0 25px
        color: #5b626a
    .row-tables
        padding: 0 50px
    thead
        tr
            background-color: #e6f0fd
            th
                text-align: center
                border-right: 1px solid #fff
                border-right: 1px solid #fff
                font-family: "Roboto"
                border-color: #fff
                font-weight: 500
                color: #636e7c
                &:first-of-type
                    text-align: left !important
    .table-striped > tbody > tr:nth-of-type(odd)
        background-color: transparent
        &:hover
            background-color: #eceeb9
    .table-striped > tbody > tr:nth-of-type(even)
        background-color: #e6f0fd
        &:hover
            background-color: #eceeb9

    table
        tr
            &:hover
                background-color: #eceeb9
            td
                border-right: 1px solid #fff
                border-right: 1px solid #fff
                border-color: #fff
                font-family: "Roboto"
                font-weight: 500
                color: #636e7c
                &:first-of-type
                    text-align: left !important
                &:hover
                    background-color: #f7f9ac


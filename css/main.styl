body
    min-width: 1220px;
.col-xs-9,
.col-xs-3,
.col-lg-8,
.col-lg-4
    padding: 0
.container-fluid
    padding: 0

.h_head
    content: " "
    min-width: 100%;
    height: 3px
    width: 100%;
    background-image: url(../img/h_head.png)
    background-size: cover
.row
    margin: 0
    position: relative
    .logo-footer
        position: absolute
        bottom: 0
        left: 76.5%
        padding-top: 35px
        padding-bottom: 35px
.left-menu
    .logo
        padding-top: 35px
        padding-right: 30px
        padding-bottom: 35px
    .nav-left
        ul
            list-style: none
            margin: 0
            padding: 0
            li
                padding-top: 20px
                padding-bottom: 20px
                padding-right: 25px
                border-bottom: 1px solid #f1f1f1
                font-size: 0
                span
                    width: 30px
                    margin-right: 15px
                    display: inline-block
                    vertical-align: middle
                &:first-of-type
                    border-top: 1px solid #f1f1f1
                a
                    width: 165px
                    font-size: 16px
                    display: inline-block
                    vertical-align: middle
                    text-decoration: underline
                    font-family: "Futura PT Medium"
                    color: #201f7b !important
                    &:hover,
                    &:focus,
                    &:active
                        text-decoration: none
.content
    .header
        background-color: #202629
        font-size: 0
        ul
            max-width: 950px
            li
                vertical-align: middle
                text-align: center
                a
                    white-space: nowrap;
                p
                    white-space: nowrap;
                .head-a
                    color: #ffffff
                    font-family: "Futura PT Demi"
                    font-size: 16px
                    text-transform: uppercase
                    &:hover,
                    &:focus,
                    &:active
                        background: none
                        color: #ffffff
                .download-price
                    display: inline-block
                    padding: 15px 35px
                    border-radius: 35px
                    font-family: "Futura PT Heavy"
                    font-size: 14px
                    color: #000000
                    text-transform: uppercase
                    background-color: #dce300
                    border-bottom: 4px solid #a68900 !important
                    span
                        display: inline-block
                        &:last-of-type
                            margin-left: 4px
                            vertical-align: middle
                        img
                            display: inline-block
                            vertical-align: middle
                    &:hover,
                    &:focus,
                    &:active
                        background-color: #dce300
                        text-decoration: none
                        color: #ffffff
                    &:active
                        border: none !important
                .head-contact
                    display: inline-block
                    padding-top: 15px
                    padding-bottom: 15px
                    .head-p
                        text-align: left
                        .head-tel
                            display: inline-block
                            margin-left: 40px
                            color: #ffffff
                            font-family: "Futura PT Medium"
                            font-size: 30px
                            line-height: 1
                        span
                            color: #ffffff
                            font-family: "Roboto"
                            font-size: 14px
                            &:first-of-type
                                width: 50px
                                margin-right: 4px
                                color: #565b5e
                        a
                            color: #dce300
                            font-family: "Roboto"
                            font-size: 14px
                            display: inline-block
    .slide
        padding-bottom: 100px
        background-image: url(../img/bg1.jpg)
        background-size: cover
        .title
            padding-top: 100px
            padding-bottom: 60px
            h1
                font-family: "Futura PT Demi"
                font-size: 42px
                margin: 0
                color: #202629
            h2
                font-family: "Futura PT Book"
                font-size: 30px
                margin: 0
                color: #202629
        .sub-title
            p
                font-family: "Roboto"
                font-size: 18px

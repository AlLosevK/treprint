                margin: 0 0 0 90px
    .about-us
        padding-top: 65px
        padding-bottom: 40px
        background-color: #f2f6fb
        h3
            font-family: "Futura PT Demi"
            font-size: 30px
            padding-left: 20px
            margin: 0 0 25px 0
            color: #5b626a
        p
            font-family: "Roboto"
            font-size: 14px
            padding-left: 20px
            color: #202629
            margin-bottom: 30px
        .visit
            padding-top: 50px
            div
                height: 140px
                margin-bottom: 20px
                img
                    margin-bottom: 15px
                    text-align: center
            p
                font-family: "Roboto"
                font-size: 14px
                margin-left: 34px
                text-decoration: underline
            .visit-1
                p
                    color: #2b2781
            .visit-2
                p
                    color: #3da31a
            .visit-3
                p
                    color: #e11116
    .preim
        padding-bottom: 60px
        background-color: #f2f6fb
        h3
            font-family: "Futura PT Demi"
            font-size: 30px
            padding-left: 35px
            margin: 0 0 45px 0
            color: #5b626a
        .col-xs-3
            img
                margin-bottom: 15px
                text-align: center
            p
                width: 160px
                margin: 0 auto
                font-family: "Roboto"
